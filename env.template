# ==============================================
# Watcher - Environment Configuration
# ==============================================
# Copy this file to .env.local for development
# Copy this file to .env.production for production

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# NODE_ENV must be one of: development, production, test (Next.js standard)
NODE_ENV=development

# Public URL - Set this to your domain in production
# Examples:
# - https://guardianeye.adlas.cloud
# - http://monitoring.yourdomain.com
# - Leave empty for auto-detection
NEXT_PUBLIC_APP_URL=

# Application port (host machine)
APP_PORT=3000

# ==============================================
# PROMETHEUS CONFIGURATION
# ==============================================
# Prometheus server address (no trailing slash)
PROMETHEUS_URL=http://prometheus:9090
# Alternative for local development:
# PROMETHEUS_URL=http://localhost:9090

# Query timeout in seconds
PROMETHEUS_QUERY_TIMEOUT=30

# ==============================================
# BLACKBOX EXPORTER CONFIGURATION
# ==============================================
# Blackbox Exporter address (no trailing slash)
BLACKBOX_EXPORTER_URL=http://blackbox-exporter:9115
# Alternative for local development:
# BLACKBOX_EXPORTER_URL=http://localhost:9115

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MySQL/MariaDB Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=monitoring
DB_USER=monitoring_user
DB_PASSWORD=secure_password_here

# MySQL root password (for database administration)
MYSQL_ROOT_PASSWORD=root_password

# MySQL exposed port on host machine (if needed)
MYSQL_PORT=3306

# ==============================================
# AUTHENTICATION
# ==============================================
# Session secret for JWT tokens
SESSION_SECRET=change-this-to-a-secure-random-string-in-production

# Default admin credentials (change in production!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# ==============================================
# TELEGRAM NOTIFICATIONS
# ==============================================
# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=

# Default Telegram Chat ID (optional)
TELEGRAM_CHAT_ID=

# ==============================================
# MONITORING DEFAULTS
# ==============================================
# Default check interval in seconds
DEFAULT_CHECK_INTERVAL=30

# Default timeout for HTTP checks in seconds
DEFAULT_HTTP_TIMEOUT=10

# ==============================================
# PROMETHEUS AUTHENTICATION (if required)
# ==============================================
PROMETHEUS_AUTH_USERNAME=
PROMETHEUS_AUTH_PASSWORD=

# ==============================================
# SERVICE PORTS (HOST MACHINE)
# ==============================================
# Prometheus exposed port
PROMETHEUS_PORT=9090

# Blackbox Exporter exposed port
BLACKBOX_PORT=9115

# Grafana exposed port
GRAFANA_PORT=3001

# ==============================================
# GRAFANA CONFIGURATION
# ==============================================
# Grafana admin password
GRAFANA_ADMIN_PASSWORD=admin

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_CRON_MONITORING=true
FEATURE_PUSHGATEWAY=true
FEATURE_STATUS_PAGES=true

# ==============================================
# ADVANCED SETTINGS
# ==============================================
# Maximum concurrent checks
CONCURRENT_CHECKS=10

# Log level (error, warn, info, debug)
LOG_LEVEL=info

